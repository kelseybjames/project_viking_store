<%= form_for [:admin, @product] do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <%= f.label :sku, 'SKU Number' %>
  <%= f.text_field :sku %>

  <%= f.label :description, 'Description' %>
  <%= f.text_area :description %>

  <%= f.label :price, 'Price' %>
  <%= f.text_field :price %>

  <%= f.label :category_id, 'Category ID' %>
  <%= f.text_field :category_id %>

  <%= f.submit %>
<% end %>